{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "paths": {
      "app": ["./src/app"],
      "app/*": ["./src/app/*"],
      "assets": ["./src/assets"],
      "assets/*": ["./src/assets/*"],
      "modules": ["./src/modules"],
      "modules/*": ["./src/modules/*"],
      "features": ["./src/features"],
      "features/*": ["./src/features/*"],
      "core": ["./src/core"],
      "core/*": ["./src/core/*"],
      "types": ["./src/types"],
      "types/*": ["./src/types/*"]
    }
  },
  "include": ["src"]
}
